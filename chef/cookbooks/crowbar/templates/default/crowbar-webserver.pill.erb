Bluepill.application("crowbar-webserver") do |app|
  app.process("crowbar-webserver") do |p|
    p.name = "rainbows"
    p.start_command = "/usr/bin/env HOME=<%= @crowbar_home %> rainbows -E production -c rainbows.cfg"
    p.stdout = p.stderr = "<%= "#{@logdir}/production.out" %>"
    p.working_dir = "<%= @rails_root %>"
    p.uid = "crowbar"
    p.gid = "crowbar"
    p.daemonize = true
  end
end
